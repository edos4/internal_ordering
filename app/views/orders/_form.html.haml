= form_for @order do |f|
  .form-container
    - if @order.errors.any?
      #error_explanation
        %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
        %ul
          - @order.errors.full_messages.each do |message|
            %li= message

  %form
    .row.mb-2
      .col-md-6
        = f.label :table
        = f.select 'table_num', options_for_select(['1', '2', '3', '4', '5', '6', '7', '8']), :class => 'form-control'
    
    .form-group
      = f.submit 'Save', :class => 'btn btn-sm btn-primary'
        
