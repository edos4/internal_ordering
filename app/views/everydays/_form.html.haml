= form_for @everyday do |f|
	.form-container
	- if @everyday.errors.any?
		#error_explanation
			%h2= "#{pluralize(@everyday.errors.count, "error")} prohibited this everyday from being saved:"
			%ul
				- @everyday.errors.full_messages.each do |message|
					%li= message
	%form
		.row.mb-2
			.col-md-6
				= f.label :image
				.custom-file.w-100
					= f.file_field :image, :class=> "custom-file-input", :id=>"logo", :required => true
					= f.label :choose_file, :class=> "custom-file-label", :for=>"logo"
			.col-md-6
				= f.label :name
				= f.text_field :name, :class => 'form-control', :required => true
		.row.mb-2
			.col-md-6
				= f.label :category
				= f.select :category, options_for_select([['Grocery'],['Booze'],['Health']]), :class => 'form-control'
			.col-md-6
				= f.label :description
				= f.text_field :description, :class => 'form-control', :required => true
		.row.mb-2
			.col-md-6
				= f.label :ev_order
				= f.text_field :ev_order, :class => 'form-control', :required => true
		.form-group
			= f.submit 'Save', :class => 'btn btn-sm btn-primary'
