= form_for @merchant do |f|
	.form-container
		- if @merchant.errors.any?
			#error_explanation
				%h2= "#{pluralize(@merchant.errors.count, "error")} prohibited this merchant from being saved:"
				%ul
					- @merchant.errors.full_messages.each do |message|
						%li= message
		%form
			.row.mb-2
				.col-md-6
					= f.label :logo
					.custom-file.w-100
						-# %input#customFile2.custom-file-input{:required => "", :type => "file"}/
						-# %label.custom-file-label{:for => "customFile2"} Choose file...
						
						= f.file_field :logo, id: :logo, :class=> "custom-file-input", :id=>"customFile"
						= f.label :choose_file, :class=> "custom-file-label", :for=>"customFile"
				.col-md-6
					= f.label :merchant_name
					= f.text_field :name, :class => 'form-control', :required => true
			.row.mb-2
				.col-md-6
					= f.label :description
					= f.text_field :desc, :class => 'form-control', :required => true
				.col-md-6
					= f.label :sub_description
					= f.text_field :sub_desc, :class => 'form-control', :required => true
			.row.mb-2
				.col-md-6
					= f.label :price
					= f.text_field :price, :class => 'form-control', :required => true
				.col-md-6
					= f.label :coordinates
					= f.text_field :coordinates, :class => 'form-control', :required => true, placeholder: '10.668445,122.954490 no spaces'
			.row.mb-2
				.col-md-6
					= f.label :store_type_id
					= f.select 'store_type_id', options_for_select(StoreType.all.order(:name).collect{ |u| [u.name, u.id] }), :class => 'custom-select w-100', :id => "store_type_id"

		
			.form-group
				= f.submit 'Save', :class => 'btn btn-primary btn-sm px-4'


