		= yield :header
	%body
		= render 'layouts/sidebar'
		= render 'layouts/sidebar-sub'
		%main.main-content.col-lg-10.col-md-9.col-sm-12.p-0.offset-lg-2.offset-md-3
			= yield
	= yield :footer

