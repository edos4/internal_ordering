  /     %i.icon-cog
  /     %span Settings
  %li{:class => "#{active_controller?(controller: 'admin/admin', action: 'settings')}"}
    = link_to destroy_user_session_path, method: :delete do
      %i.icon-switch
      Logout
#extend-sidebar
  %i.icon-forward-3
  %span Close
