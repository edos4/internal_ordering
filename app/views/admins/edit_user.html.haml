.main.main-content.col-lg-10.p-0.offset-sm-1
  .main-content-container.container-fluid.px-4
    .page-header.row.no-gutters.py-4
      .col-6.col-sm-6.text-center.text-sm-left.mb-0
        %span.text-uppercase.page-subtitle Overview
        %h3.page-title Edit User
    .col-main-sub
      = form_for @user, url: '/admins/update_user' do |f|
        .field
          = f.label :email
          = f.text_field :email, {:required => true, :class => "form-control", :value => "#{@user.email}"}
        .field
          = f.label :password
          = f.text_field :password, {:required => "true",:class => "form-control", :value => "#{@user.password}", :type => "password"}
        - unless @user.role == 'admin'
          .fields
            = f.label :role
            = f.select :role, options_for_select([[ 'cashier', 'cashier'], ['checker','checker'],['bookkeeper','bookkeeper']]),{},:class => 'form-control'
          
        .field
          = f.number_field :user_id, {:hidden => true, :value => "#{@user.id}"}
        %br
        .actions
          = f.submit 'Update',:class => "mt-3 col-md-3 btn btn-sm btn-primary float-right"
