.main.main-content.col-lg-10.p-0.offset-sm-0.ml-3
  .main-content-container.container-fluid
    / Page Header
    .page-header.row.no-gutters.py-4
      .col-6.col-sm-4.text-center.text-sm-left.mb-0
        %span.text-uppercase.page-subtitle Overview
        %h3.page-title Users
      .col-md-8
        = link_to 'New User', admins_new_user_path, :class=>"mt-3 btn btn-sm btn-primary mr-1 float-right btn-create"
    / End Page Header
    / Default Light Table
    .row
      .col
        %table.table.table-striped.table-bordered#tabled{:role => 'datatable'}
          %thead
            %tr
              %th Email
              %th Role
              %th Action

          %tbody
            - @users.each do |user|
              %tr
                %td= user.email
                %td= user.role
                %td
                  = link_to '',admin_edit_user_path(user), :class => "far fa-edit"
                  - unless user.role == 'admin'
                    = link_to '', admin_destroy_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :class => "far fa-trash-alt"
  %br


:javascript
  
  var table = $('table').DataTable();
 
  // #myInput is a <input type="text"> element
  $('#myInput').on( 'keyup', function () {
      table.search( this.value ).draw();
  } );

  $('#user_new').click(function(){
    $('#user_new_modal').modal();
  });



