- content_for :title, 'Drivers'
- content_for :breadcrumb, "Stores"
.twelvecol
  .page-header
    = link_to new_driver_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: t('drivers.index.add_tooltip') do
      %i.icon-plus
    %h2.widget.widget-header= t('drivers.index.drivers')
  - if @drivers.empty?
    .widget.widget-content
      .helper-notification
        %p= t('drivers.index.no_records')
        %i.icon-labmerchants
  - else
    .table-responsive
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th= t('drivers.index.name')
            %th= t('drivers.index.devise_id')
        %tbody
          - @drivers.each do |driver|
            %tr
              %td
                = driver.name
              %td
                = driver.devise_id
              %td
                = link_to 'Show', driver
                = link_to 'Edit', edit_driver_path(driver)
                = link_to 'Destroy', driver, method: :delete, data: { confirm: 'Are you sure?' }

