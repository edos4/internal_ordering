= form_for @variant do |f|
	.form-container
	- if @variant.errors.any?
		#error_explanation
			%h2= "#{pluralize(@variant.errors.count, "error")} prohibited this variant from being saved:"
			%ul
				- @variant.errors.full_messages.each do |message|
					%li= message

	%form
		.row.mb-2
			.col-md-6
				= f.label :image
				.custom-file.w-100
					= f.file_field :image, id: :variant_image, :class=> "custom-file-input", :id=>"logo", :required => true
					= f.label :choose_file, :class=> "custom-file-label", :for=>"logo"
			.col-md-6
				= f.label :name
				= f.text_field :name, :class => 'form-control', :required => true
			
		.row.mb-2
			.col-md-6
				= f.label :price
				= f.text_field :price, :class => 'form-control', :required => true
			.col-md-6
				= f.hidden_field :product_id,:value => "#{params['id']}", :class => 'form-control'

		.form-group
			= f.submit 'Save', :class => 'btn btn-sm btn-primary'
				

