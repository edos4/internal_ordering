- content_for :title, 'Variants'
- content_for :breadcrumb, "Stores"
.twelvecol
  .page-header
    = link_to new_variant_path, :class => "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: t('variants.index.add_tooltip') do
      %i.icon-plus
    %h2.widget.widget-header= t('variants.index.variants')
  - if @variants.empty?
    .widget.widget-content
      .helper-notification
        %p= t('variants.index.no_records')
        %i.icon-lab
  - else
    .table-responsive
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th= t('variants.index.name')
            %th= t('variants.index.image')
            %th= t('variants.index.price')
        %tbody
          - @variants.each do |variant|
            %tr
              %td
                = variant.name
              %td
                = variant.image
              %td
                = variant.price
              %td
                = link_to 'Show', variant
                = link_to 'Edit', edit_variant_path(variant)
                = link_to 'Destroy', variant, method: :delete, data: { confirm: 'Are you sure?' }

