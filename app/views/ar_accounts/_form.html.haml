= form_for @ar_account do |f|
  - if @ar_account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ar_account.errors.count, "error")} prohibited this ar_account from being saved:"
      %ul
        - @ar_account.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name, :class=> "form-control col-md-12"
  .actions
    = f.submit 'Save', :class=>"mt-3 col-md-4 btn btn-sm btn-primary "
