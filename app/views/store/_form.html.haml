
.bg-light
  / Form Controls
  #forms.container.pt-xl-5
    .section-title.col-lg-12.col-md-12.ml-auto.mr-auto
      
    / Form Controls - Simple Forms: Default / Using Icons (Seamless)
    .row.px-3
      .example.col-lg-6.col-md-6
        %h3.mb-4 Checkout 
        %h5 Delivery Address
        / Delivery Address
        .row.py-3
          .col-md-12
            %form
              #delivery_details
                .form-group
                  %input#address_input.form-control{:type => "text", :name=> "delivery_address_attributes", :placeholder => "Complete Address here"}/
                  %input{:type => "hidden", :name=> "latLong", :id=> "latLong", :value => "bacolod"}
                  #map
                .form-group
                  %input#form1-apt.form-control{:type => "text",  :placeholder => "Apt Number / Company Name"}/
                .row
                  .form-group.col-md-6
                    %input#form1-number.form-control{:placeholder => "Contact Number", :type => "text"}/
                  .form-group.col-md-6
                    %input#form1-phone.form-control{:placeholder => "Phone Number", :type => "text"}/
                .form-group
                  %textarea.form-control{:placeholder => "Add delivery instructions (e.g Use the door bell when you arrive.)", :rows => "5", :type => "textarea"}
                .actions
                  %button.btn.btn-primary.float-right{:type => "button"} Send  
        %h5 Time
        .row.py-2
          .col-md-12
            %form
              .row
                .form-group.col-md-6
                  %input#form1-number.form-control{:placeholder => "Today", :type => "text"}/
                .form-group.col-md-6
                  %input#form1-phone.form-control{:placeholder => "30 - 45 mins", :type => "number"}/
              .actions
                %button.btn.btn-primary.float-right{:type => "button"} Confirm    
        .row.py-3
          %h5.pl-3   Select Payment
          .col-md-12
            %form
              .row
                .form-group.col-md-4
                  %fieldset
                  .custom-control.custom-radio.d-line.my-2
                    %input#cash.custom-control-input{:name => "customRadio", :type => "radio"}/
                    %label.custom-control-label{:for => "cash"} Cash on Delivery
                .form-group.col-md-4
                  %fieldset
                    .custom-control.custom-radio.d-line.my-2
                      %input#credit.custom-control-input{:checked => "checked", :name => "customRadio", :type => "radio"}/
                      %label.custom-control-label{:for => "credit"} Credit Card
                .form-group.col-md-4
                  %fieldset
                    .custom-control.custom-radio.d-line.my-2
                      %input#debit.custom-control-input{:checked => "checked", :name => "customRadio", :type => "radio"}/
                      %label.custom-control-label{:for => "debit"} Debit Card
              .form-group
                %input#form1-name.form-control{:type => "text", :placeholder => "Card Number"}/
              .row
                .form-group.col-md-4
                  %input#form1-number.form-control{:placeholder => "MM/YY", :type => "text"}/
                .form-group.col-md-4
                  %input#form1-phone.form-control{:placeholder => "CVV", :type => "text"}/
                .form-group.col-md-4
                  %input#form1-phone.form-control{:placeholder => "Zip Code", :type => "text"}/
              .actions
                %button.btn.btn-primary.col-12.mt-3{:type => "button"} Continue
      / Cart Details
    
      .example.col-lg-6.col-md-6
        %h3.mb-4 Cart Details
        .card
          .card-body
            %h6.cart-details.border-bottom Crib
            / Form Controls: Simple Forms
            .accordion-item{"data-id" => "301"}
              .product-info
                .upper-product-info
                  .product-qty
                    %h2 10 x 
                  .product-text
                    %h2 Chicken Wings
                    %p.description 10 pieces
                  %p.price ₱228
            
            .details-section
              .total
                %h3 Sub Total
                %h3.total-value ₱1695
                %input.total-value{:name => "gross_amount", :type => "hidden", :value => "1695"}/
              .total
                %h3 Tax & Fees
                %h3.total-value ₱1695
                %input.total-value{:name => "gross_amount", :type => "hidden", :value => "1695"}/
              .total
                %h3 Delivery
                %h3.total-value ₱1695
                %input.total-value{:name => "gross_amount", :type => "hidden", :value => "1695"}/
              .amount.border-top
                %h3 Total Amount
                %h3.total-value ₱1695
                %input.total-value{:name => "gross_amount", :type => "hidden", :value => "1695"}/

