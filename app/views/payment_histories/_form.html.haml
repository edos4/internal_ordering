  .field
    = f.label :ar_account_id
    = f.number_field :ar_account_id
  .field
    = f.label :penalty
    = f.text_field :penalty
  .field
    = f.label :processing
    = f.text_field :processing
  .field
    = f.label :reservation
    = f.text_field :reservation
  .field
    = f.label :equity
    = f.text_field :equity
  .field
    = f.label :others
    = f.text_field :others
