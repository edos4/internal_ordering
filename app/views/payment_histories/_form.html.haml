    = f.number_field :amortization_id
  .field
    = f.label :current_balance
    = f.text_field :current_balance
  .field
    = f.label :interest
    = f.text_field :interest
  .field
    = f.label :payment
    = f.text_field :payment
  .field
    = f.label :new_balance
    = f.text_field :new_balance
  .field
    = f.label :mode_of_payment
    = f.text_field :mode_of_payment
  .field
    = f.label :check_bank
    = f.text_field :check_bank
  .field
    = f.label :check_no
    = f.text_field :check_no
  .field
    = f.label :bank_account_id
